<div class="container text-center">
    <div class="row">
        <div class="col">
            <nav class="navbar bg-primary">
                <div class="container-fluid">
                    <a class="navbar-brand text-bg-primary" href="/">
                        Sistema de agendamentos
                    </a>
                </div>
            </nav>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <nav class="navbar navbar-expand-lg bg-body-tertiary">
                <div class="container-fluid">
                    <a class="navbar-brand" href="/">Home</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                        <div class="navbar-nav">
                            <a class="nav-link" href="/cadastrar">Cadastrar</a>
                            <a class="nav-link" href="/consulta">Consultar</a>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
    </div>
    <div class="row">
        <div class="col">
            &nbsp;
        </div>
    </div>
    <div class="row">
        <div class="col bg-white">
            <p class="text-start fs-5">Consulta</p>
            <p class="text-start fs-6">Exemplo de listagem</p>
            <p>
            <div class="container text-center">
                <div class="row bg-primary">
                    <div class="col text-light">
                        Nome
                    </div>
                    <div class="col text-light">
                        Endereço
                    </div>
                    <div class="col text-light">
                        Bairro
                    </div>
                    <div class="col text-light">
                        Ações
                    </div>
                </div>
                <div class="row">
                    <div class="col text-light">
                        &nbsp;
                    </div>
                    <div class="col text-light">
                        &nbsp;
                    </div>
                    <div class="col text-light">
                        &nbsp;
                    </div>
                    <div class="col text-light">
                        &nbsp;
                    </div>
                </div>
                {{#each posts}}
                    {{#dataValues}}
                        <div class="row mb-1">
                            <div class="col">
                                {{nome}}
                            </div>
                            <div class="col">
                                {{endereco}}
                            </div>
                            <div class="col">
                                {{bairro}}
                            </div>
                            <div class="col">
                                <button type="button" class="btn btn-primary btn-sm" onclick="location.href='/editar/{{id}}'">Editar</button>
                                <button type="button" class="btn btn-danger btn-sm" onclick="location.href='/excluir/{{id}}'">Excluir</button>
                            </div>
                        </div>
                    {{/dataValues}}
                {{/each}}
            </div>
        </div>
    </div> 
</div>