<div class="container text-center">
    <div class="row">
        <div class="col">
            <nav class="navbar bg-primary">
                <div class="container-fluid">
                    <a class="navbar-brand text-bg-primary" href="/">
                        Sistema de agendamentos
                    </a>
                </div>
            </nav>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <nav class="navbar navbar-expand-lg bg-body-tertiary">
                <div class="container-fluid">
                    <a class="navbar-brand" href="/">Home</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                        <div class="navbar-nav">
                            <a class="nav-link" href="/cadastrar">Cadastrar</a>
                            <a class="nav-link" href="/consulta">Consultar</a>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
    </div>
    <div class="row">
        <div class="col">
            &nbsp;
        </div>
    </div>
    <div class="row">
        <div class="col">
            <p class="text-start fs-5">Editar</p>
            <p class="text-start fs-6">Exemplo de Edição</p>
        </div>
    </div>
    {{#each posts}}
        {{#dataValues}}
            <form action="/atualizar" method="post">
                <div class="row mb-3">
                    <div class="col">
                        Nome:
                    </div>
                    <div class="col">
                        <input type="hidden" id="id" name="id" value="{{id}}">
                        <input type="text" class="form-control" id="nome" name="nome" value="{{nome}}">
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col">
                        Endereço:
                    </div>
                    <div class="col">
                        <input type="text" class="form-control" id="endereco" name="endereco" value="{{endereco}}">
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col">
                        Bairro:
                    </div>
                    <div class="col">
                        <input type="text" class="form-control" id="bairro" name="bairro" value="{{bairro}}">
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col">
                        Cep:
                    </div>
                    <div class="col">
                        <input type="text" class="form-control" id="cep" name="cep" value="{{cep}}">
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col">
                        Cidade:
                    </div>
                    <div class="col">
                        <input type="text" class="form-control" id="cidade" name="cidade" value="{{cidade}}">
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col">
                        Estado:
                    </div>
                    <div class="col">
                        <input type="text" class="form-control" id="estado" name="estado" value="{{estado}}">
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col">
                        Telefone:
                    </div>
                    <div class="col">
                        <input type="text" class="form-control" id="telefone" name="telefone" value="{{telefone}}">
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col">
                        Celular:
                    </div>
                    <div class="col">
                        <input type="text" class="form-control" id="celular" name="celular" value="{{celular}}">
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        &nbsp;
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <button type="submit" class="btn btn-primary">Editar</button>
                    </div>
                    <div class="col">
                        <button type="button" class="btn btn-outline-primary" onclick="location.href='/consulta'">Cancelar</button>
                    </div>
                </div>
            </form>
        {{/dataValues}}
    {{/each}}
</div>